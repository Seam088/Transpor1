<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bang.transpor1.fragment.PersonalFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#f2efef">

            <TextView
                android:id="@+id/tv_personal_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="个人信息"
                android:textColor="@drawable/tabitem_txt_sel" />

            <TextView
                android:id="@+id/tv_recharge_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="充值记录"
                android:textColor="@drawable/tabitem_txt_sel" />

            <TextView
                android:id="@+id/tv_yuzhi_set"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="阈值设置"
                android:textColor="@drawable/tabitem_txt_sel" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_child_personal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>
</FrameLayout>
