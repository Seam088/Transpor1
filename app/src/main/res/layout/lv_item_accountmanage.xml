<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <!--style="@style/CustomCheckboxTheme2"-->
    <CheckBox
        android:id="@+id/cb_account"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tv_carPlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_account_recharge"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/iv_account_carlog"
            android:text="辽A100001"
            android:textSize="14dp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/tv_account_carName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_carPlate"
            android:layout_alignBottom="@+id/tv_carPlate"
            android:layout_alignEnd="@+id/btn_account_recharge"
            android:text="车主:张三"
            android:textSize="14dp"
            android:textStyle="italic|bold" />

        <ImageView
            android:id="@+id/iv_account_carlog"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/zhonghua"
            android:padding="10dp"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_account_carlog"
            android:layout_alignStart="@+id/tv_carPlate"
            android:paddingBottom="4dp"
            android:text="余额:100元"
            android:textColor="#f23232"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/adv"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:focusable="false"></TextView>

        <Button
            android:id="@+id/btn_account_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_amount"
            android:layout_alignEnd="@+id/adv"
            android:text="充值"
            android:visibility="visible" />
    </RelativeLayout>


</LinearLayout>
