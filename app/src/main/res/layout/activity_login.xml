<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context="com.bang.transpor1.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logo2"
        android:layout_marginTop="50dp"/>

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="textPassword|none"
            android:hint="密码"
            android:selectAllOnFocus="true"
            android:maxLines="1"
            android:maxLength="20"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:background="@drawable/et_login_urn_pwd" />
            <ImageButton
                android:id="@+id/ib_pwd_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="60dp"
                android:background="@drawable/login_eye_c"
                />

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/et_login_urn_pwd"
            android:hint="用户名"
            android:inputType="text|none"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:selectAllOnFocus="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="50dp">
        <CheckBox
            android:id="@+id/cb_rem_pwd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            style="@style/CustomCheckboxTheme"
            android:text="保存密码"
            android:layout_gravity="center_vertical"/>
        <CheckedTextView
            android:id="@+id/cb_Forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#ffffff"
            android:layout_gravity="center|right"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="登录"
        android:background="@drawable/btn_login"
        android:textColor="#ffffff"
        android:textSize="22sp" />
    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_reg"
        android:text="注册"
        android:textColor="#cdffffff"
        android:textSize="22sp" />
</LinearLayout>
