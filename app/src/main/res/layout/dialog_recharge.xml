<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_num_100"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_num"
            android:text="100元"
            android:textColor="#9e9c9c"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_num_50"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_num"
            android:text="50元"
            android:textColor="#9e9c9c"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_num_20"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_num"
            android:text="100元"
            android:textColor="#9e9c9c"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_num_10"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_num"
            android:text="50元"
            android:textColor="#9e9c9c"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_num_custom"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="2"
            android:background="@drawable/btn_num"
            android:text="自定义"
            android:textColor="#9e9c9c"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/et_num_custom"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_num"
            android:hint="输入金额"
            android:inputType="number"
            android:textColor="#9e9c9c"
            android:textSize="22sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_login"
        android:text="充值"
        android:textColor="#ffffff"
        android:textSize="22sp" />
</LinearLayout>
